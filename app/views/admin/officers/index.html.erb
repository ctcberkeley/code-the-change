<div class="breadcrumbs">
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to "Admin", admin_path %></li>
      <li class="active">Officers</li>
    </ol>
  </div>
</div>

<div class="section">
  <div class="container">
    <h2>Officers</h2>
     
    <p>
      <%= link_to 'New Officer', new_admin_officer_path, { class: "btn btn-default" } %>
    </p>

    <table class="table">
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
     
      <% @officers.each do |officer| %>
        <tr>
          <td><%= officer.name %></td>
          <td><%= officer.position %></td>
          <td><%= image_tag officer.image.url(:thumbnail) %></td>
          <td><%= link_to 'Show', admin_officer_path(officer) %> | 
              <%= link_to 'Edit', edit_admin_officer_path(officer) %> | 
              <%= link_to 'Destroy', admin_officer_path(officer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>