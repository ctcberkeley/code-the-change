<div class="breadcrumbs">
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to "Admin", admin_path %></li>
      <li class="active">Events</li>
    </ol>
  </div>
</div>

<div class="section">
  <div class="container">
    <h2>Events</h2>

    <p>
      <%= link_to 'New Event', new_admin_event_path, { class: "btn btn-default" } %>
    </p>

    <table class="table">
      <tr>
        <th>Title</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Location</th>
        <th>Description</th>
        <th>URL</th>
        <th>Actions</th>
      </tr>
     
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.start_time.strftime("%A, %B %d, %I:%M%p") %></td>
          <td><%= event.end_time.strftime("%A, %B %d, %I:%M%p") %></td>
          <td><%= event.location %></td>
          <td><%= event.description %></td>
          <td><%= event.url %></td>
          <td><%= link_to 'Show', admin_event_path(event) %> | 
              <%= link_to 'Edit', edit_admin_event_path(event) %> | 
              <%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>