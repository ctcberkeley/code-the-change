<div class="section">
  <div class="container">
    <h1>Event</h1>

    <p>
      <strong>Title:</strong>
      <%= @event.title %>
    </p>
     
    <p>
      <strong>Start Time:</strong>
      <%= @event.start_time.strftime("%A, %B %d, %I:%M%p") %>
    </p>

    <p>
      <strong>End Time:</strong>
      <%= @event.end_time.strftime("%A, %B %d, %I:%M%p") %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @event.location %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @event.description %>
    </p>

    <p>
      <strong>URL:</strong>
      <%= @event.url %>
    </p>

    <%= link_to 'Back', admin_events_path %> | <%= link_to 'Edit', edit_admin_event_path(@event) %>
  </div>
</div>