<% title "Projects" %>
<% description "The Berkeley chapter focuses on forming project teams to assist non-profits in achieving their goals, whether it be through web development or mobile app design." %>

<div class="projects">
  <div class="container">
    <h2>Projects</h2>
    <% @terms.each do |term| %>
      <h3 class="subheader"><%= term.season + " " + term.year.to_s %></h3>
      <div class="row project-row">
        <% term.projects.each do |project| %>
          <div class="col-md-3 col-sm-4 project-wrapper" data-toggle="modal" data-target=<%= "#" + project.id.to_s + "-modal" %>>
            <div class="project">
              <div class="project-image">
                <span class="helper"></span>
                <%= image_tag project.image.url(:small), class: "img-thumbnail img-responsive img-project" %>
              </div>
              <div class="project-info"><%= project.organization %></div>
            </div>
          </div>
          <%= render 'pages/project_modal', :project => project %>
        <% end %>  
      </div>
    <% end %>
  </div>
</div>
