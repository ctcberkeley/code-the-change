<div class="schedule">
  <h2>Schedule</h2>
  <table class="table table-striped">
    <tr>
      <th>Week</th>
      <th>Date</th>
      <th>Topic</th>
      <th>Assignment</th>
    </tr>      
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.week %></td>
        <td><%= lesson.date.strftime("%b %e") %></td>
        <td><%= lesson.topic %></td>
        <td>
          <% lesson.assignments.each do |assignment| %>
            <%= link_to assignment.title, [:admin, assignment.lesson, assignment] %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>